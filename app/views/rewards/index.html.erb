<h2>Listing Rewards</h2>

<table class="table table-bordered table-striped" >
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Points</th>
    <th>Image name</th>
    <th>Status</th>
    <th>Start date</th>
    <th>End date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rewards.each do |reward| %>
  <tr>
    <td><%= reward.name %></td>
    <td><%= reward.details %></td>
    <td><%= reward.points %></td>
    <td><%= reward.image_name %></td>
    <td><%= reward.status %></td>
    <td><%= reward.start_date %></td>
    <td><%= reward.end_date %></td>
    <td><%= link_to 'Show', reward %></td>
    <td><%= link_to 'Edit', edit_reward_path(reward) %></td>
    <td><%= link_to 'Destroy', reward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

