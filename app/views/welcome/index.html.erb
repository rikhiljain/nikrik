<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Motor Insurance</a></li>
    <li><a href="#tab2" data-toggle="tab">Health Insurance</a></li>
     <li><a href="#tab3" data-toggle="tab">Home Insurance</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
		<form action="" class="form-horizontal">
			<div id="basicDetails">				
				<div id="currentInsuranceDetails" class="border">
					<div class="control-group">
						<label class="control-label" for="policyType">Type Of Policy</label>
						<div class="controls">
							<label class="radio inline">
								<input type="radio" id="policyType" name="policyType" value="N">Buy insurance for a new car
							</label>
							<label class="radio inline">
								<input type="radio" id="policyType" name="policyType" value="R" checked="checked">Renew existing or lapsed car policy from any insurer
							</label>
						</div>
					</div>
				</div>
				<div id="registrationDetails" class="border">
					<div class="control-group">
						<label class="control-label" for="city">City where the car is registered(RTO)</label>
						<div class="controls">
							<input id="city" type="text">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="day">First Purchase or Registration Date</label>
						<div class="controls">
							<select id="day" name="day"></select>
							<select id="month" name="month"></select>
							<select id="year" name="year"></select>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="registrationType">Current Registration Type</label>
						<div class="controls">
							<label class="radio inline">
								<input type="radio" id="registrationType" name="registrationType" value="I" checked="checked">Individual
							</label>
							<label class="radio inline">
								<input type="radio" id="registrationType" name="registrationType" value="C">Company
							</label>
						</div>
					</div>
				</div>				
				<div id="vehicleDetails" class="border">
					<div class="control-group">
						<label class="control-label" for="make">Manufacturer</label>
						<div class="controls">
							<select id="make" name="make"></select>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="model">Manufacturer</label>
						<div class="controls">
							<select id="model" name="model"></select>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label" for="price">Ex-showroom Price</label>
						<div class="controls">
							<span id="price"></span>		
						</div>
					</div>
				</div>						
			</div>
			
			<div id="previousPolicyDetails" class="border">
				<div class="control-group">
					<label class="control-label" for="policyType">Previous policy type</label>
					<div class="controls">
						<label class="radio inline">
							<input type="radio" id="prevPolicyType" name="prevPolicyType" value="C" checked="checked">Comprehensive
						</label>
						<label class="radio inline">
							<input type="radio" id="prevPolicyType" name="prevPolicyType" value="T">Third Party
						</label>
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<input type="checkbox"> click here in case your vehicle is uninsured for more than 6 months
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="day">Previous policy end date</label>
					<div class="controls">
						<select id="day" name="day"></select>
						<select id="month" name="month"></select>
						<select id="year" name="year"></select>
						New Policy Start Date
					</div>
				</div>
				<div class="control-group">
					<div class="controls">
						<input type="checkbox" checked="checked"> Previous policy was a full year policy
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="claimsMade">Claims made in previos policy?</label>
					<div class="controls">
						<label class="radio inline">
							<input type="radio" id="claimsMade" name="claimsMade" value="Y">Yes
						</label>
						<label class="radio inline">
							<input type="radio" id="claimsMade" name="claimsMade" value="N" checked="checked">No
						</label>						
					</div>
				</div>
				<div id="ncbDiv" class="control-group">
					<label class="control-label" for="ncb">NCB % on previous policy</label>
					<div class="controls">
						<select id="ncb" name="ncb"></select>
					</div>
				</div>
				<div id="noCliamBounsVerified" class="control-group">
					<div class="controls">
						<input type="checkbox" checked="checked"> No claim bonus declaration verified
					</div>
				</div>						
			</div>
			
			<div id="protectionForAccessories" class="border">
				<div class="control-group">
					<label class="control-label" for="elecAccessories">Value of electrical accessories</label>
					<div class="controls">
						<input id="elecAccessories" type="text">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="nonElecAccessories">Value of non-electrical accessories</label>
					<div class="controls">
						<input id="nonElecAccessories" type="text">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="kit">Value of LPG/CNG kit</label>
					<div class="controls">
						<select id="kit" name="kit"></select>
					</div>
				</div>
				<div id="kitPriceControlGroup" class="control-group">
					<label class="control-label" for="kitPrice">Value of LPG/CNG kit</label>
					<div class="controls">
						<select id="kitPrice" name="kitPrice"></select>
					</div>
				</div>				
			</div>
			
			<div id="additionalDiscount" class="border">
				<div class="control-group">
					<label class="control-label" for="antiTheft">ARAI approved anti-theft device is installed in the car</label>
					<div class="controls">
						<label class="radio inline">
							<input type="radio" id="antiTheft" name="antiTheft" value="Y">Yes
						</label>
						<label class="radio inline">
							<input type="radio" id="antiTheft" name="antiTheft" value="N"  checked="checked">No
						</label>						
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="automobileAssoc">Driver is a member of Automobile Association</label>
					<div class="controls">
						<label class="radio inline">
							<input type="radio" id="automobileAssoc" name="automobileAssoc" value="Y">Yes
						</label>
						<label class="radio inline">
							<input type="radio" id="automobileAssoc" name="automobileAssoc" value="N" checked="checked">No
						</label>						
					</div>
				</div>
			</div>
		</form>
    </div>
