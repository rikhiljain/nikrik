<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Insurance Shopee" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Insurance Shopee" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <header class="navbar navbar-fixed-top iSHeader">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <% if (!user_signed_in? || (current_user.has_role? :user) ) %>
               <div class="span2">
                
               </div>
                <div class="span7">
                  <%= render 'layouts/messages' %>
                  <%= yield %>
                </div>
                <div class="span3 affix span9Pos">
                  <%= render "shared/ad_banner" %>
                </div>
             <%else %>
               <div class="span2">
                <%= render "shared/admin_left_nav" %>
               </div>
                <div class="span10">
                  <%= render 'layouts/messages' %>
                  <%= yield %>
                </div>
             <% end %>
          </div>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <footer class="navbar navbar-fixed-bottom">
      <nav class="navbar-inner">
        <div class="container">
           <%= render 'layouts/footer' %>
        </div>
      </nav>
    </footer>
  </body>
</html>