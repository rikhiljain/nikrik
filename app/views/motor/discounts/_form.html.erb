<%= simple_form_for(@motor_discount) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :idv_chart, label: 'Motor Details', :collection => Motor::IdvChart.select(" id, concat(maker , ' - ', model, ' - ', subtype) as label" ), :label_method => :label, :value_method => :id, :required => true , :autofocus => true %>
    <%= f.association :company, :label_method => :name, :value_method => :id,  :prompt => "Select Company", :required => true %>
    <%= f.input :year, label:'Year Of Manufacture', :required => true %>
    <%= f.input :amount, label:'Discount(%)', hint: 'Use (-) sign for Loading', :required => true %>
    <%= f.association :rto ,label:'RTO', :collection => Motor::Rto.select(" id, concat(city , ' - ', state) as label" ), :label_method => :label, :value_method => :id,  :prompt => "Select RTO" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
