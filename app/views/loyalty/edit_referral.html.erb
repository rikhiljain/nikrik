<h2>Editing Referral</h2>
<%= simple_form_for @referral, :url => url_for(:action => 'update_referral', :controller => 'loyalty', :id => @referral.id), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id, disabled: true, label: 'User ID' %>
    <%= f.input :email, disabled: true %>
    <%= f.input :mobile, disabled: true %>
    <%= f.input :ref_name, disabled: true, label: 'Referral Customer Name' %>
    <%= f.input :ref_mobile , disabled: true, label: 'Referral Mobile Number' %>
    <%= f.input :ref_desc , label: 'Referral Details', :as => :text , :input_html => { :cols => 20, :rows => 5 } %>
    <%= f.input :amount  , label: 'Premium Amount' %>
    <%= f.input :status , :collection => [ "OPEN", "INPROGRESS", "CONFIRM"] %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
