<h2>products</h2>

<table class="table table-bordered table-striped" >
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Points</th>
    <th>Image name</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.details %></td>
    <td><%= product.points %></td>
    <td><%= product.image_name %></td>
    <td><%= link_to 'Bye', {:controller => "loyalty", :action => "purchase", :id => product.id }  %></td>
  </tr>
<% end %>
</table>

