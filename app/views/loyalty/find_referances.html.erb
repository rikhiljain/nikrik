
<div>
<form method="get" action="/loyalty/find_referances" class="form-horizontal" >
  <select type="text" name="status" >
   <option value="OPEN" >OPEN</option>
   <option value="INPROGRESS" >INPROGRESS</option>
   <option value="CONFIRM" >CONFIRM</option>
  </select>
 <input type="submit" name="search" value="Search" />
</form>
</div>


<fieldset >
<legend>Referances</legend>

<table class="table table-bordered table-striped">
  <tr>
    <th>User Id</th>
    <th>Mobile</th>
    <th>Email</th>
    <th>Referance Name</th>
    <th>Referance Mobile</th>
    <th>Description</th>
    <th>Staus</th>
    <th>Date</th>
    <th></th>
 </tr>

  <% @referances.each do |referance| %>
      <tr>
        <td><%= referance.user_id %></td>
        <td><%= referance.mobile %></td>
        <td><%= referance.email %></td>
        <td><%= referance.ref_name %></td>
        <td><%= referance.ref_mobile %></td>
        <td><%= referance.ref_desc %></td>
        <td><%= referance.status %></td>
        <td><%= referance.created_at %></td>
        <td><%= link_to 'Update', {:controller => "/loyalty", :action => "referance", :id => referance.id }  %></td>
      </tr>
  <% end %>
</table>
</fieldset>
