<fieldset >
<legend>My Points</legend>

<table class="table table-bordered table-striped">
  <tr>
    <th>Referance Id</th>
    <th>Earn Date</th>
    <th>Expiry Date</th>
    <th>Points</th>
    <th>Staus</th>
  </tr>

  <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.ref_id %></td>
        <td><%= reward.created_at %></td>
        <td><%= reward.exp_dt %></td>
        <td><%= reward.points %></td>
        <td><%= reward.status %></td>
      </tr>
  <% end %>
</table>
</fieldset>
