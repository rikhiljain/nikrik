<div class="is_right-hand-div">
    <div class="alert alert-block is_alert-heading">
        <strong>Refer Friend & Earn Money</strong>
    </div>
    <div id="referralFormNotificationDiv">
    </div>
    <div>
        <form method="post" action="" id="referralForm" class="callUsForm">
            <fieldset>
               <div class="control-group">
                    <label class="control-label" for="mobile">Your Mobile Number</label>
                    <div class="controls">
                        <input type="text" id="mobile" name="mobile" placeholder="Your Mobile"></input>
                    </div>
                </div> 
               <div class="control-group">
                    <label class="control-label" for="email">Your Email address</label>
                    <div class="controls">
                        <input type="text" id="email" name="email" placeholder="Your Email Address"></input>
                    </div>
                </div> 
               <div class="control-group">
                    <label class="control-label" for="ref_name">Referral Name</label>
                    <div class="controls">
                        <input type="text" id="ref_name" name="ref_name" placeholder="Referral Name"></input>
                    </div>
                </div> 
                <div class="control-group">
                    <label class="control-label" for="ref_mobile">Referral Mobile</label>
                    <div class="controls">
                        <input type="text" id="ref_mobile" name="ref_mobile" placeholder="Referral Mobile"></input>
                    </div>
                </div> 
                <div class="control-group">
                    <label class="control-label" for="ref_desc">Referral Details</label>
                    <div class="controls">
                        <textarea id="ref_desc" name="ref_desc" ></textarea>
                    </div>
                </div> 
                <div class="control-group">
                    <div class="controls">
                       <button type="submit" class="btn is_btn-custom">Submit</button>
                    </div>
                </div>  
            </fieldset>
        </form>
    </div>
</div>
