<h2>Listing Health Charts</h2>

<div>
<form method="get" action="/health/charts" class="form-horizontal" >
  <select type="text" name="company_id" >
   <option value="1" >ICICI</option>
   <option value="2" >BAJAJ</option>
   <option value="3" >TATA</option>
   <option value="4" >RELIANCE</option>
   <option value="5" >Apollo Munich</option>
   <option value="6" >Max Bupa</option>
   <option value="7" >Religare</option>
   <option value="8" >HDFC</option>
   <option value="9" >Bharti Axa</option>
   <option value="10" >IFFCO Tokio</option>
   <option value="11" >L&T</option>
   <option value="12" >National</option>
   <option value="13" >United India</option>
  </select>
 <input type="submit" name="search" value="Search" />
</form>
</div>
<p><%= link_to 'Add Health Record', new_health_chart_path, :class => "btn" %></p>
<table class="table table-bordered table-striped" >
  <tr>
    <th>Company</th>
    <th>Plan</th>
    <th>Coverage</th>
    <th>Age start</th>
    <th>Age end</th>
    <th>Adults</th>
    <th>Childs</th>
    <th>Premium</th>
    <th></th>
    <th></th>
  </tr>

<% @health_charts.each do |health_chart| %>
  <tr>
    <td><%= health_chart.company_id %></td>
     <td><%= health_chart.plan %></td>
    <td><%= health_chart.coverage %></td>
    <td><%= health_chart.age_start %></td>
    <td><%= health_chart.age_end %></td>
    <td><%= health_chart.adults %></td>
    <td><%= health_chart.childs %></td>
    <td><%= health_chart.premium %></td>
    <td><%= link_to 'Show', health_chart %></td>
    <td><%= link_to 'Edit', edit_health_chart_path(health_chart) %></td>
  </tr>
<% end %>
</table>
<p><%= link_to 'Add Health Record', new_health_chart_path, :class => "btn" %></p>
