<%= simple_form_for(@reminder) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :policy_type %>
    <%= f.input :insurer_name %>
    <%= f.input :day %>
    <%= f.input :month %>
    <%= f.input :remarks %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
