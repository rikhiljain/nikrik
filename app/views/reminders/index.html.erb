<h1>Listing reminders</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mobile</th>
    <th>Policy type</th>
    <th>Insurer name</th>
    <th>Day</th>
    <th>Month</th>
    <th>Remarks</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= reminder.name %></td>
    <td><%= reminder.email %></td>
    <td><%= reminder.mobile %></td>
    <td><%= reminder.policy_type %></td>
    <td><%= reminder.insurer_name %></td>
    <td><%= reminder.day %></td>
    <td><%= reminder.month %></td>
    <td><%= reminder.remarks %></td>
    <td><%= reminder.user_id %></td>
    <td><%= link_to 'Show', reminder %></td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

