<div id="deviseDiv" class="is_main_content_div">
  <div class="alert alert-block is_alert-heading is_main_content_header">
    <strong>Sign in</strong>
  </div>
  <div class="is_main_content_body" id="signinForm">
  	<div style="width=33%;float:left">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :login, :label => "Email", :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		    <div class="control-group">
		    	<div class="controls">
			    	<%= f.button :submit, "Sign in", :class => "is_btn-custom"  %>
			  		<%= render "devise/shared/links" %>
			  	</div>
			</div>
		  </div>	  
		<% end %>
	</div>
	<div class="divider-or" style="width=33%;float:left">
	</div>
	<div class="social-connect" style="width=33%;float:left">
		<p></p><h5>Sign in with </h5><p></p>
        <p>
	  		<a class="btn is_btn-custom" href="/auth/facebook"><span style="font-size:18px;"><i class="icon-facebook"></i>&nbsp;&nbsp;<i class="icon-double-angle-right"></i>&nbsp;&nbsp;Facebook<span></span></span></a>
		</p>
		<p>
		</p>
		<p>
            <a class="btn is_btn-custom" href="/auth/google_oauth2"><span style="font-size:18px;"><i class="icon-google-plus"></i>&nbsp<i class="icon-double-angle-right"></i>&nbsp;&nbsp;Google&nbsp;&nbsp;&nbsp;</span>
            </a>
        </p>
	</div>
  </div>
</div>
<% content_for :insuranceContent do %>
  <%= render :partial => "welcome/index", :locals => { :display => "none" } %>
<% end %>
<%= javascript_tag do %>
	window.content = "devise";
<% end %>   
