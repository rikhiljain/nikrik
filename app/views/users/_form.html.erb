<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true   %>
    <%= f.input :email %>
    <%= f.input :mobile %>
    <%= f.input :address, :as => :text %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
